{% extends 'base.html.twig' %}

{% block title %}Clip index{% endblock %}

{% block body %}
    <h1>Clip index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Video</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clip in clips %}
            <tr>
                <td>{{ clip.id }}</td>
                <td>{{ clip.title }}</td>
                <td>{{ clip.video }}</td>
                <td>{{ clip.description }}</td>
                <td>{{ clip.createdAt ? clip.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('clip_show', {'id': clip.id}) }}">show</a>
                    <a href="{{ path('clip_edit', {'id': clip.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('clip_new') }}">Create new</a>
{% endblock %}
