<form method="post" style="display: inline" action="{{ path('artist_album_delete', {'id': album.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ album.id) }}">
    <button class="btn btn-danger btn-sm">
        <i class="fa fa-trash"></i>
    </button>
</form>
