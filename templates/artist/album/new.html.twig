{% extends 'artist/base.html.twig' %}

{% block title %}Nouveau Album{% endblock %}

{% form_theme form "artist/album/_collection.html.twig" %}

{% block body %}
    <div class="app-title">

        <div>
            <h1><i class="fa fa-plus"></i> Création d'un nouveau Albums</h1>
            <p>Créer un album et ajouter les musics</p>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item">Gestion Album</li>
            <li class="breadcrumb-item active"><a href="#">Créer un album</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                {{ include('artist/album/_form.html.twig') }}
            </div>
        </div>
    </div>
    <a href="{{ path('artist_album_index') }}">Retour à la liste</a>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}