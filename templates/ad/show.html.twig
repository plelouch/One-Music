            </tr>
            <tr>
                <th>Image</th>
                <td>{{ ad.image }}</td>
            </tr>
            <tr>
                <th>Introduction</th>
                <td>{{ ad.introduction }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ ad.content }}</td>
